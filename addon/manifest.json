{

  "manifest_version": 2,
  "name": "Verse keys",
  "version": "0.0.1",
  "description": "Custom keybindings for Verse email web app",
  "icons": {
    "48": "icons/ic_keyboard_black_24dp_2x.png"
  },

  "applications": {
    "gecko": {
      "id": "verse_keys@mozilla.org",
      "strict_min_version": "45.0"
    }
  },

  "background": {
      "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "permissions": ["tabs", "<all_urls>", "storage"]
}
